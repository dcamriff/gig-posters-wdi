<body class='page-other'>

<div>
    <a href="/users">Home</a> / Bands We Like
</div>
    
<div class='band-container'>
    <div class='band-bubbles-section'>
        {{#each bands}}
        <a href="/band/{{this._id}}" class='link band-bubble'>
            <div class='band-photo'>
                {{#if this.imageUrl}}
                <img src="{{this.imageUrl}}" alt="{{this.bandName}}'s profile pic"> {{else}}
                <img src="http://ultimateclassicrock.com/files/2015/06/Spinal-Tap-630x420.jpg" alt="{{this.bandName}}'s profile pic"> {{/if}}
            </div>
            <div class='user-name'>
                {{this.bandName}}
                {{this.hometown}}
            </div>
        </a>
        {{/each}}
    </div>
</div>
</body>