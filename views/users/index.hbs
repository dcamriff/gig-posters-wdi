<html class='page-home'>
<div class='user-container'>
    <div class='user-bubbles-section'>
        {{#each users}}
        <a href="/users/{{this._id}}" class='link user-bubble'>
            <div class='user-photo'>
                {{#if this.photoUrl}}
                <img src="{{this.photoUrl}}" alt="{{this.username}}'s profile pic"> {{else}}
                <img src="https://i.imgur.com/nbG1deE.png" alt="{{this.username}}'s profile pic"> {{/if}}
            </div>
            <div class='user-name'>
                {{this.firstName}} {{this.LastName}}
            </div>
        </a>
        {{/each}}
    </div>

    <div class='button-gold'>
        <a href="/users/new">
            Sign Up
        </a>
    </div>
</div>
</html>