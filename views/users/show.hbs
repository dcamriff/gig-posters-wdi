<html class='page-other'>
<div class='user-container'>
    <div>Users SHOW Page</div>
    <h1>{{user.firstName}} {{user.lastName}}</h1>
    <div class='user-bubble'>
        {{#if user.photoUrl}}
        <img src="{{user.photoUrl}}" alt="{{user.username}}'s profile picture"> {{else}}
        <img src="/../public/images/pig-img.png" alt="{{user.username}}'s profile picture"> {{/if}}
    </div>
    <div class='user-profile'></div>
    <div class='button-container'>
        <div class='button-edit'>
            <a href="/users/{{user._id}}/edit">Edit Profile</a>
        </div>
        <div class='button-delete'>
            <a href="/users/{{user._id}}/delete">Delete Profile</a>
        </div>
    </div>
    <div>username:
        <b>{{user.username}}</b>
    </div>
    <div>email:
        <b>{{user.email}}</b>
    </div>
    <div class: 'see-collection'>
        <a href="/users/{{user._id}}/posters">see my poster collection</a>
    </div>
</div>

</html>